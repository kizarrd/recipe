extends layouts/main.pug

block content 
    .form-container
        form(action=`/recipe${routes.upload}`, method="post", enctype="multipart/form-data")
            label(for="file") Image File
            input(type="file", id="file", name="imageFile", required = true, accept="image/*")
            input(type="text", placeholder="Title", name="title", required = true)
            textarea(name="ingredients", placeholder="Ingredients", required = true)
            textarea(name="recipe", placeholder="Recipe", required = true)
            input(type="submit", value="Create Recipe")